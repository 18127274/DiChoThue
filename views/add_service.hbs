                            <script language="javascript">

                                get_Products((result) => {
                                    var birds = result;

                                    var ele = document.getElementById('listproduct');
                                    console.log(ele);
                                    for (var i = 0; i <= birds.length; i++) {
                                        // POPULATE SELECT ELEMENT WITH JSON.
                                        ele.innerHTML = ele.innerHTML +
                                            '<option value="' + birds[i].id + '">' + birds[i].name + '</option>';
                                    }
                                });


                                function validateSelectBox(obj) {
                                    var options = obj.children;
                                    console.log(obj);
                                    var html = '';
                                    for (var i = 0; i < options.length; i++) {
                                        if (options[i].selected) {
                                            html = html + ',' + options[i].value;
                                        }
                                    }
                                    var b = html;
                                    b = b.substr(1);
                                    console.log(b);
                             
                                    localStorage.setItem("product_local", b);
                                }
                                


                                

                                var form = document.getElementById('add_service');
                                form.addEventListener('submit', function (event) {
                                    event.preventDefault();

                                    var name = document.getElementById('name').value;
                                    var price = document.getElementById('price').value;
                                    var time_treatment = document.getElementById('time_treatment').value;
                                    var description = document.getElementById('Description').value;

                                    var list_product = localStorage.getItem("product_local");

                                    arr_product = list_product.split(',');

                                    console.log(name);
                                    console.log(price);
                                    console.log(time_treatment);
                                    console.log(description);
                                    console.log(list_product);
                                    Add_service(name, price, time_treatment, description, arr_product);

                                });



